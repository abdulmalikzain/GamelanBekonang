                <!--android:layout_width="110dp"-->
                <!--android:layout_height="90dp"-->
                <!--android:src="@drawable/ic_akun"-->
                <!--app:civ_border_color="@color/color_home"-->
                <!--app:civ_border_width="2dp"-->
                <!--app:civ_circle_background_color="@color/white" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_marginTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@drawable/ic_lock_white_24dp"/>
                    <EditText
                        android:id="@+id/et_passwordsr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password Lama"
                        android:layout_marginLeft="10sp"
                        android:textColorHint="@color/white"
                        android:textSize="18sp"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@drawable/ic_lock_white_24dp"/>

                    <EditText
                        android:id="@+id/et_newpasssr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password Baru"
                        android:backgroundTint="@color/white"
                        android:textSize="18sp"
                        android:textColorHint="@color/white"
                        android:layout_marginLeft="10sp"
                        android:inputType="textPassword"
                        android:textColor="@color/white"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_lock_white_24dp"/>

                    <EditText
                        android:id="@+id/et_confrimpassr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Konfirmasi Password Baru "
                        android:textSize="18sp"
                        android:backgroundTint="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginLeft="10sp"
                        android:inputType="textPassword"
                        android:textColor="@color/white"/>
                </LinearLayout>



                <Button
                    android:id="@+id/btn_simpanpasssr"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:text="SIMPAN"
                    android:background="@drawable/ripple_effect"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>