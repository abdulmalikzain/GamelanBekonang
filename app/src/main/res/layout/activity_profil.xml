<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menuProfil.ProfilActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_profil"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Base.Theme.AppCompat">

    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_akun"
        android:layout_below="@id/tabs_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        app:civ_border_width="2dp" />



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:layout_marginTop="220dp"
        app:cardCornerRadius="5dp"
        android:padding="50dp">



        <RelativeLayout
            android:id="@+id/relusername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_akun"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="id"
                android:editable="false"
                android:inputType="none" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rename"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_akun"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/tv_namep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="id"
                android:editable="false"
                android:inputType="none" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/reltemail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Pengguna"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_akun"/>

            <TextView
                android:id="@+id/tv_emailp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="email"
                android:inputType="textNoSuggestions" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reltelephone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone Pengguna"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_akun"/>

            <TextView
                android:id="@+id/tv_notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="telephone"
                android:inputType="textNoSuggestions" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r_keluar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone Pengguna"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_akun"/>

            <TextView
                android:id="@+id/tv_keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="Keluar"
                android:inputType="textNoSuggestions" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>