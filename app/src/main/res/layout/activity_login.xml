<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_akun"
    tools:context="com.gamelanbekonang.logRes.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_login"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Base.Theme.AppCompat">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text=""/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/coba"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_help_black_24dp"
            app:civ_border_color="@color/color_home"
            app:civ_circle_background_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:id="@+id/et_emaill"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_passwordl"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tampilkan Password" />

        <Button
            android:id="@+id/btn_loginl"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="LOG IN"
            android:background="@color/color_home"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="cursive"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="OR"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_registerl"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="REGISTER"
            android:background="@color/color_home"/>
    </LinearLayout>


</LinearLayout>