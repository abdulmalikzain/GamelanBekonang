<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">



    <ImageView
        android:id="@+id/slide_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/slide3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/slide_head"
        android:text="Kontak Penjual"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/slide_desc"
        android:text="Hubungi langsung dengan
penjual gamelan bekong
dan dapatkan harga yang sesuai"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/slide_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>