<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menuKategori.KategoriFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_kategori"
            style="@style/TechniqueToolbar">

        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>
    </RelativeLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:id="@+id/ll_bonang"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/bonang"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Bonang"
                            android:layout_marginTop="-10dp"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idbonang"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_columnWeight="1">
                    <LinearLayout
                        android:id="@+id/ll_kenong"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/kenong"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Kenong"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idkenong"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:id="@+id/ll_kendang"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/kendang"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Kendang"
                            android:layout_marginTop="-10dp"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idkendang"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:id="@+id/ll_gambang"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/gambang"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />
                        <TextView
                            android:textAlignment="center"
                            android:text="Gambang"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idgambang"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:id="@+id/ll_peking"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/peking"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Peking"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idpeking"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_columnWeight="1">
                    <LinearLayout
                        android:id="@+id/ll_gong"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/gong"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Gong"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idgong"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:id="@+id/ll_rebab"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/rebab"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Rebab"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idrebab"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/sitter"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Siter"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idsiter"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:id="@+id/ll_gender"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/gender"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Gender"
                            android:layout_marginTop="-10dp"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idgender"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_columnWeight="1">
                    <LinearLayout
                        android:id="@+id/ll_saron"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/saron"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Saron"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idsaron"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:id="@+id/ll_demung"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/demung"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Demung"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_iddemung"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                    <LinearLayout
                        android:id="@+id/ll_slentem"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_effect"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/slenthem"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Slentem"
                            android:textColor="#000"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idslenthem"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:id="@+id/ll_kethukkempyang"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/kehtuk"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="70dp" />

                        <TextView
                            android:textAlignment="center"
                            android:text="Kethuk"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_k_idkethuk"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_columnWeight="1">
                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="70dp" />
                        <TextView
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    >
                </android.support.v7.widget.CardView>
            </GridLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>